{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ],
        "target": "es2015",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**.ts", "store/store.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
