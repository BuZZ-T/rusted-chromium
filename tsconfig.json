{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": [
            "es2020",
            "dom"
        ],
        "target": "es2015",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**.ts"
    ],
    "exclude": [
        "node_modules",
        "start-local.ts",
        "**/*.spec.ts"
    ]
}
