{
    "compilerOptions": {
        "moduleResolution": "node",
        "lib": [
            "es2020",
            "dom"
        ],
        "target": "es2015",
        "module": "commonjs",
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**.ts"
    ]
}